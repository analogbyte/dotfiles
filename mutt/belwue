send-hook '~Q' 'set record=^'

macro index,pager i "<change-folder>+belwue/INBOX<enter>" "open inbox"
macro index,pager I "<change-folder>+personal/INBOX<enter>" "open inbox"
macro index,pager S "s+belwue/Spam<enter>" "move a message to spam"
macro index,pager a "s+belwue/INBOX.archiv<enter>" "move a message to archive"
macro index,pager z "s+belwue/INBOX.archiv<enter>" "move a message to stuff"
macro attach,index,pager o "<shell-escape>offlineimap -a belwue<enter>"
